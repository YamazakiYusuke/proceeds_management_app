<h1 class="text-center my-5">商品カテゴリー一覧</h1>
<hr>
<p class="btn-priority btn-lg text-center"><%= link_to('売上一覧へ', selled_products_path) %></p>
<div class="offset-2 col-8">
  <h4>新規登録</h4>
  <%= form_with(model: @category, local: true) do |form| %>
    <%= form.label "カテゴリー名前", for: "name" %>
    <%= form.text_field(:name, id: "name") %>
    <%= form.submit "登録",class:'btn　btn-primary' %>
  <% end %>
</div>
<hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th>名前</th>
      <th>合計売上</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.selled_products.sum(:price) %></td>
          <td>
            <%= link_to('編集', edit_category_path(category.id)) %>
            <%= link_to('削除', category_path(category.id), method: :delete, data: { confirm: '本当に削除してよろしいですか'})  %>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>


